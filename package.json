{
  "author": {
    "email": "name@domain.tld",
    "name": "Your Name Here"
  },
  "bugs": {
    "url": "https://domain.tld/bugs"
  },
  "dependencies": {
    "choo": "^6.13.0",
    "choo-devtools": "^2.5.1",
    "nanocomponent": "^6.5.2"
  },
  "description": "A super simple and lightweight starting point for your Electron-based app.",
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-stage-2": "^7.0.0",
    "electron": "~2.0.9",
    "electron-builder": "^20.28.4",
    "electron-reloader": "^0.2.0",
    "npm-run-all": "^4.1.3",
    "rollup": "^0.66.0",
    "rollup-plugin-babel": "beta",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-uglify": "^6.0.0",
    "sass": "^1.13.4",
    "snazzy": "^8.0.0",
    "standardx": "^3.0.1",
    "updates": "^4.3.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "homepage": "https://domain.tld",
  "main": "app/dist/main.js",
  "name": "your-app-name",
  "private": true,
  "scripts": {
    "build": "rollup --config && npm run css",
    "css": "sass --update app/gui/sass:app/dist --style compressed",
    "pack": "npm run build && electron-builder --dir",
    "package": "electron-builder -m",
    "start": "npm run build && run-s start:*",
    "start:electron": "electron .",
    "test": "run-s test:*",
    "test:dependencies": "updates -u ./",
    "test:lint": "standardx --verbose | snazzy",
    "watch": "npm run build && run-p watch:*",
    "watch:development": "rollup --config --watch",
    "watch:electron": "electron .",
    "watch:sass": "sass --watch app/gui/sass:app/dist --style compressed"
  },
  "standardx": {
    "ignore": [
      "app/dist"
    ]
  },
  "version": "0.0.0"
}
